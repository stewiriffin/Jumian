# Database Configuration
# PostgreSQL (required for production)
DATABASE_URL="postgresql://jumian_user:your_password@localhost:5432/jumian"
# For local development with Docker:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/jumian_dev"

# Authentication
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="change-this-to-a-random-secret-at-least-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Redis (Optional for development, Required for production)
# Local Redis
# REDIS_URL="redis://localhost:6379"
# Upstash Redis (production)
# REDIS_URL="rediss://default:password@redis-host:6379"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@jumian.com"

# Stripe Payment (Optional)
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# M-Pesa Payment Configuration (Optional)
# Get credentials from https://developer.safaricom.co.ke/
MPESA_CONSUMER_KEY=""
MPESA_CONSUMER_SECRET=""
MPESA_SHORTCODE="174379"
MPESA_PASSKEY=""
MPESA_ENVIRONMENT="sandbox" # or "production"

# Sentry Error Tracking (Optional)
# Get DSN from https://sentry.io/
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# UploadThing File Upload (Optional)
# Get credentials from https://uploadthing.com/
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Admin Seed Password (Optional)
# If not set, a random password will be generated during seeding
# ADMIN_SEED_PASSWORD="your-secure-admin-password"
